---
import '@/styles/global.css'
import siteConfig from '@/config/site.json'
import Header from './components/Navbar/Header.astro'

export interface Props {
  title?: string,
  meta_title?:string,
  favicon?: string,
	className?: string,
	style?: string
}

const {
  title = siteConfig.site.title, 
  favicon = siteConfig.site.favicon_image, 
	className,
	style,
  meta_title} = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href={favicon} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body 
		style={style}
		class={`bg-background min-h-screen flex flex-col ${className}`}>
		<Header/>
		<main class="grow">
      <slot/>
    </main>
	</body>
</html>
